<MudButton Class="@Class" Style="@Style"
           Variant="Value ? Variant.Filled : Variant.Outlined" Color=" Value ?CheckedColor : UncheckedColor"
           OnClick="ChangeState"
           Disabled="@Disabled">
    @Label
</MudButton>


@code {
    [Parameter]
    public string Label { get; set; } = string.Empty;
    [Parameter]
    public Color CheckedColor { get; set; } = Color.Success;
    [Parameter]
    public Color UncheckedColor { get; set; } = Color.Warning;

    [Parameter]
    public bool Value { get; set; }
    [Parameter]
    public EventCallback<bool> ValueChanged { get; set; }


    [Parameter]
    public string Class { get; set; } = string.Empty;
    [Parameter]
    public string Style { get; set; } = string.Empty;
    [Parameter]
    public bool Disabled { get; set; } = false;

    private async Task ChangeState()
    {
        Value = !Value;
        await ValueChanged.InvokeAsync(Value);
    }
}
