<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:local="clr-namespace:TaxDashboard.Initialization"
             x:Class="TaxDashboard.Initialization.InitializationPage"
			 x:DataType="local:InitializationPage"
             Title="Initialization"
			 BindingContext="local:InitializationPage">
	<Grid RowDefinitions="*, Auto, Auto, *"
		  ColumnDefinitions="*, Auto, *">
		<Label
			Grid.Row="1"
			Grid.Column="1"
            Text="Loading..."
			FontSize="Title"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
		<Label
			Grid.Row="2"
			Grid.Column="1"
            Text="{Binding LoadingDetailsText}"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
	</Grid>
</ContentPage>